<Pane fx:id="pane" prefHeight="754.0" prefWidth="1257.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.amaz1ng.launcher.gui.controllers.GuiLoginController">
   <children>
      <ImageView fitHeight="754.0" fitWidth="1257.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@images/bg_login.png" />
         </image>
      </ImageView>
        <Button fx:id="buttonAuth" layoutX="436.0" layoutY="571.0" mnemonicParsing="false" onAction="#onButtonAuth" prefHeight="70.0" prefWidth="386.0" style="-fx-background-color: #5B774E;" text="Войти" textFill="WHITE">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
        <PasswordField fx:id="password" layoutX="436.0" layoutY="461.0" prefHeight="70.0" prefWidth="386.0" promptText="Пароль" style="-fx-border-color: #282828; -fx-background-color: #121212;">
         <font>
            <Font size="24.0" />
         </font></PasswordField>
      <CheckBox fx:id="buttonStore" disable="true" layoutX="186.0" layoutY="235.0" mnemonicParsing="false" onAction="#onButtonStore" text="Запомнить" visible="false" />
        <TextField fx:id="login" layoutX="436.0" layoutY="346.0" prefHeight="70.0" prefWidth="386.0" promptText="Логин" style="-fx-border-color: #282828; -fx-background-color: #121212;">
